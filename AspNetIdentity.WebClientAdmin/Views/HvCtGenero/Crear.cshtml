@model AspNetIdentity.Models.HvCtGeneroModel

@{
    ViewBag.Title = "Crear";
}

<div class="card mb-4 wow fadeIn">

    <!--Card content-->
    <div class="card-body d-sm-flex justify-content-between">
        <h3 class="card-title">Crear Genero</h3>
        <p class="card-text">Hoja de Vida / Genero </p>
    </div>

</div>

<div class="row wow fadeIn">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header"> </div>
            <div class="card-body">
                @using (Html.BeginForm("Crear", "HvCtGenero", FormMethod.Post, htmlAttributes: new { id = "car-form", @name = "car-form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>HvCtGeneroModel</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                       

                        <div class="form-group">
                            @Html.LabelFor(model => model.NOMBRE, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NOMBRE, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a id="btn-sendForm" href="#" class="btn btn-primary" onclick="Redir('CrearJson', 'HvCtGenero')">Enviar</a>
                                <div id="respuesta"> </div>
                            </div>
                        </div>
                    </div>
                }


                <div>

                </div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")   @Scripts.Render("~/Scripts/ModalControl.js")
                }
            </div>
        </div>
    </div>
</div>