@model AspNetIdentity.Models.HvCtActitudesModel

@{
    ViewBag.Title = "Edit";
}
<div class="card mb-4 wow fadeIn">

    <!--Card content-->
    <div class="card-body d-sm-flex justify-content-between">
        <h3 class="card-title">Editar Actitudes  @Html.DisplayFor(modelItem => Model.NOMBRE) </h3>
        <p class="card-text">Hoja de Vida / Actitudes</p>
    </div>

</div>
<div class="row wow fadeIn">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">  </div>
            <div class="card-body">
                @using (Html.BeginForm("Edit", "HvCtActitudes", FormMethod.Post, htmlAttributes: new { id = "car-form", @name = "car-form" }))
                {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">

                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ID_ACTITUDES, new { htmlAttributes = new { @class = "form-control", @style = "display:none" } })
                            @Html.ValidationMessageFor(model => model.NOMBRE, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NOMBRE, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NOMBRE, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">

                            <a id="btn-sendForm" href="#" class="btn btn-primary" onclick="Redir('EditJson', 'HvCtActitudes')">Enviar</a>
                            <div id="respuesta"> </div>
                        </div>
                    </div>
                </div>
                }

                <div>

                </div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")   @Scripts.Render("~/Scripts/ModalControl.js")
                }
            </div>
        </div>
    </div>
</div>