@model AspNetIdentity.Models.PerfilModel
@{
    ViewBag.Title = "Edit";
}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/Scripts/ModalControl.js")
<div class="card mb-4 wow fadeIn">

    <!--Card content-->
    <div class="card-body d-sm-flex justify-content-between">
        <h3 class="card-title">Editar Perfil  @Html.DisplayFor(modelItem => Model.NOMBRE) </h3>
        <p class="card-text">Perfil</p>
    </div>

</div>
<div class="row wow fadeIn">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">  </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.ID_PERFIL, new { htmlAttributes = new { @class = "form-control", @Type = "hidden" } })

                        <div class="form-group">
                            @Html.LabelFor(model => model.NOMBRE, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NOMBRE, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NOMBRE, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ID_CT_AREA, htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-10">
                                @*@Html.DropDownList("ID_CT_PAIS", ViewData["ID_CT_PAIS"] as IEnumerable<SelectListItem>)*@
                                @Html.DropDownList("ID_CT_AREA", new SelectList(string.Empty, "Value", "Text"), "Seleccione", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ID_CT_AREA, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ID_CT_SUB_AREA, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @*@Html.EditorFor(model => model.ID_CT_SUB_AREA, new { htmlAttributes = new { @class = "form-control" } })*@
                                @Html.DropDownList("ID_CT_SUB_AREA", new SelectList(string.Empty, "Value", "Text"), "Seleccione", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ID_CT_SUB_AREA, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.REPORTA, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("REPORTA", new SelectList(string.Empty, "Value", "Text"), "Seleccione", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.REPORTA, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SUPERVISA, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownList("SUPERVISA", new SelectList(string.Empty, "Value", "Text"), "Seleccione", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.SUPERVISA, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.OBJETIVO, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.OBJETIVO, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.OBJETIVO, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                @Html.EditorFor(model => model.NombreArea, new { htmlAttributes = new { @class = "form-control", @Style = "display:none", @Value = "ok" } })
                                @Html.EditorFor(model => model.NombreSubArea, new { htmlAttributes = new { @class = "form-control", @Style = "display:none", @Value = "ok" } })
                                @Html.EditorFor(model => model.NombreReporta, new { htmlAttributes = new { @class = "form-control", @Style = "display:none", @Value = "ok" } })
                                @Html.EditorFor(model => model.NombreSupervisa, new { htmlAttributes = new { @class = "form-control", @Style = "display:none", @Value = "ok" } })
                                <input type="submit" value="Enviar" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

                <div>

                </div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")   @Scripts.Render("~/Scripts/ModalControl.js")
                }
            </div>
        </div>

        <br />
        <div class="card">
            <div class="card-header text-right waves-effect" id="Finalidades"><h4>Finalidades</h4> </div>
            <div class="card-body catalogo DivFinalidadesBody">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <a href="#" aling="rigth" onclick="Ejecutar ('@Model.ID_PERFIL','PerfilFinalidad','Crear'); return false;" title="Modificar" style="color: #013ADF;"><i class="fa fa-address-book" aria-hidden="true"></i> Crear Finalidad</a>
                                <div id="DivFinalidades"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <br />
        <div class="card">
            <div class="card-header text-right waves-effect" id="Procesos"><h4>Procesos</h4> </div>
            <div class="card-body catalogo DivProcesosBody">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <a href="#" aling="rigth" onclick="Ejecutar ('@Model.ID_PERFIL','PerfilProcesos','Crear'); return false;" title="Modificar" style="color: #013ADF;"><i class="fa fa-address-book" aria-hidden="true"></i> Crear Procesos</a>
                                <div id="DivProcesos"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <br />
        <div class="card">
            <div class="card-header text-right waves-effect" id="Relaciones"><h4>Relaciones</h4> </div>
            <div class="card-body catalogo DivRelacionesBody">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <a href="#" aling="rigth" onclick="Ejecutar ('@Model.ID_PERFIL','PerfilRelaciones','Crear'); return false;" title="Modificar" style="color: #013ADF;"><i class="fa fa-address-book" aria-hidden="true"></i> Crear Relaciones</a>
                                <div id="DivRelaciones"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <br />
        <div class="card">
            <div class="card-header text-right waves-effect" id="Formacion"><h4>Formacion</h4> </div>
            <div class="card-body catalogo DivFormacionBody">
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-12">
                                <a href="#" aling="rigth" onclick="Ejecutar ('@Model.ID_PERFIL','PerfilFormacion','Crear'); return false;" title="Modificar" style="color: #013ADF;"><i class="fa fa-address-book" aria-hidden="true"></i> Crear Formacion</a>
                                <div id="DivFormacion"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>




<div class="modal fade" id="centralModalLGInfoDemo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg modal-notify modal-info" role="document">
        <!--Content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header text-white blue darken-">
                <p class="heading lead 3">Modal Info</p>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" class="white-text">×</span>
                </button>
            </div>
            <!--Body-->
            <div class="modal-body">
            </div>
            <!--Footer-->
            <div class="modal-footer">
                <a type="button" class="btn btn-outline-info waves-effect" data-dismiss="modal" onclick="location.reload()">Cerrar</a>
            </div>
        </div>
        <!--/.Content-->
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $('.catalogo').hide();

        $(document).on('click', '.card-header', function (event) {
            let id = this.id;
            console.log("Se presionó el Boton con Id :" + id)
            $('.catalogo').fadeOut(1000);
            $('.Div' + id + 'Body').fadeIn(1000);
        });

        $.ajax({
            type: 'POST',
            url: '@Url.Action("ListArea")', // we are calling json method
            dataType: 'json',
            success: function (states) {
                $.each(states, function (i, state) {

                    if ('@Model.ID_CT_AREA' == state.Value) {

                        $("#ID_CT_AREA").append('<option value="' + state.Value + '" selected >' + state.Text + '</option>');
                    } else {
                        $("#ID_CT_AREA").append('<option value="' + state.Value + '">' + state.Text + '</option>');
                    }
                });
            },
            error: function (ex) {
                console.log(ex.responseText);
            }
        });
        $.ajax({
            type: 'POST',
            url: '@Url.Action("ListPerfil")', // we are calling json method
            dataType: 'json',
            success: function(states) {

                $.each(states, function (i, state) {
                    $("#REPORTA").append('<option value="' + state.Value + '">' + state.Text + '</option>');
                    if ('@Model.REPORTA' == state.Value) {
                        $("#REPORTA").append('<option value="' + state.Value + '" selected >' + state.Text + '</option>');
                    } else {
                        $("#REPORTA").append('<option value="' + state.Value + '">' + state.Text + '</option>');
                    }
                });
            },
            error: function (ex) {
                console.log(ex.responseText);
            }
        });
        $.ajax({
            type: 'POST',
            url: '@Url.Action("ListPerfil")', // we are calling json method
            dataType: 'json',
            success: function(states) {
                $.each(states, function (i, state) {
                    if ('@Model.SUPERVISA' == state.Value) {
                        $("#SUPERVISA").append('<option value="' + state.Value + '" selected >' + state.Text + '</option>');
                    } else {
                        $("#SUPERVISA").append('<option value="' + state.Value + '">' + state.Text + '</option>');
                    }
                });
            },
            error: function (ex) {
                console.log(ex.responseText);
            }
        });// ListSubArea
        $.ajax({
            type: 'POST',
            url: '@Url.Action("ListSubArea")', // we are calling json method
            dataType: 'json',
            success: function (states) {
               // alert("okdepto");
                $.each(states, function (i, state) {
                    if ('@Model.ID_CT_SUB_AREA' == state.Value) {
                        $("#ID_CT_SUB_AREA").append('<option value="' + state.Value + '" selected >' + state.Text + '</option>');
                    } else {
                        $("#ID_CT_SUB_AREA").append('<option value="' + state.Value + '">' + state.Text + '</option>');
                    }
                });
            },
            error: function (ex) {
                console.log(ex.responseText);
            }
        });// ListSubArea
        $("#ID_CT_AREA").change(function () {
            $("#ID_CT_SUB_AREA").empty();
            //alert("okdepto");
            $.ajax({
                type: 'POST',
                url: '@Url.Action("ListSubAreaId")', // we are calling json method
                dataType: 'json',
                data: { IdP: $("#ID_CT_AREA").val() },
                success: function (states) {
                    alert("okdepto");
                    $.each(states, function (i, state) {
                            $("#ID_CT_SUB_AREA").append('<option value="' + state.Value + '">' + state.Text + '</option>');
                    });
                },
                error: function (ex) {
                    console.log(ex.responseText);
                }
            });
            console.log("ok");
        return false;
        });
        //=========================
        $.ajax({
        type: "POST",
        url: "/PerfilFinalidad/Index",
        data: '{IdP: "' + @Model.ID_PERFIL + '" }',
        contentType: "application/json; charset=utf-8",
        dataType: "html",
        success: function (response) {
            $('#DivFinalidades').html("<br>" +response);
        },
        failure: function (response) {
            alert(response.responseText);
        },
        error: function (response) {
            alert(response.responseText);
        }
        });

        $.ajax({
        type: "POST",
        url: "/PerfilProcesos/Index",
        data: '{IdP: "' + @Model.ID_PERFIL + '" }',
        contentType: "application/json; charset=utf-8",
        dataType: "html",
        success: function (response) {
            $('#DivProcesos').html("<br>" +response);
        },
        failure: function (response) {
            alert(response.responseText);
        },
        error: function (response) {
            alert(response.responseText);
        }
        });
        
        $.ajax({
        type: "POST",
            url: "/PerfilRelaciones/Index",
        data: '{IdP: "' + @Model.ID_PERFIL + '" }',
        contentType: "application/json; charset=utf-8",
        dataType: "html",
        success: function (response) {
            $('#DivRelaciones').html("<br>" +response);
        },
        failure: function (response) {
            alert(response.responseText);
        },
        error: function (response) {
            alert(response.responseText);
        }
        });

        $.ajax({
        type: "POST",
            url: "/PerfilFormacion/Index",
        data: '{IdP: "' + @Model.ID_PERFIL + '" }',
        contentType: "application/json; charset=utf-8",
        dataType: "html",
        success: function (response) {
            $('#DivFormacion').html("<br>" +response);
        },
        failure: function (response) {
            alert(response.responseText);
        },
        error: function (response) {
            alert(response.responseText);
        }
        });

    });
</script>